@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ViewStar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/RegistrationPage.css" />
</head>
<body class="overlay">

    <section id="main" class="text-center overlay">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4">Регистрация</h3>
                            <hr />

                            <form>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class=" d-flex justify-content-start">
                                            <label class="form-label" for="firstName">Имя</label>
                                        </div>
                                        <input type="text" id="firstName" class="form-control form-control-lg" />
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class=" d-flex justify-content-start">
                                            <label class="form-label" for="lastName">Номер телефона</label>
                                        </div>
                                        <input type="tel" id="lastName" class="form-control form-control-lg" />
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <div class=" d-flex justify-content-start">
                                        <label class="form-label" for="lastName">Логин</label>
                                    </div>
                                    <input type="email" id="lastName" class="form-control form-control-lg" />
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class=" d-flex justify-content-start">
                                            <label class="form-label" for="lastName">Пароль</label>
                                        </div>
                                        <input type="password" id="lastName" class="form-control form-control-lg" />
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class=" d-flex justify-content-start">
                                            <label class="form-label" for="lastName">Подтвердите пароль</label>
                                        </div>
                                        <input type="password" id="lastName" class="form-control form-control-lg" />
                                    </div>
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-start mb-4">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           value=""
                                           id="form1Example3" />
                                    <label class="form-check-label" for="form1Example3"> Я даю своё согласие на обработку персональных данных </label>
                                </div>

                                <button class="btn btn-primary btn-lg btn-block" type="submit">Зарегистрироваться</button>
                                <hr />
                                <div class="small">
                                    <label class="label-text">Уже были у нас? <a asp-area="" asp-controller="Account" asp-action="Login">Войти!</a></label>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/homepage.js" asp-append-version="true"></script>
</body>
</html>